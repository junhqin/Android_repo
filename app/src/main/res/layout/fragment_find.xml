<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bottomnav.FindFragment"
    android:gravity="bottom">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="," />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="." />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="?" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="!" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="GHI" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="PQRS" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="ABC" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="JKL" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="TUV" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="DEF" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="MNO" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="WXYZ" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/login_code"
            android:text="×"
            android:padding="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/login_code"
            android:padding="0dp"
            android:text="清空"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:padding="0dp"
            android:background="@drawable/login_code"
            android:text="0" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@drawable/login_code"
            android:text="回车" />


    </LinearLayout>

</LinearLayout>
</RelativeLayout>